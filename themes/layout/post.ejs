<% include _partial/disqus.ejs %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Social Share</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .social-share {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }
        .social-share a {
            text-decoration: none;
            color: inherit; /* Ensures the icons inherit the text color */
        }
        .social-share i {
            font-size: 24px;
            transition: transform 0.2s;
        }
        .social-share i:hover {
            transform: scale(1.1);
        }
    </style>
</head>
<body>
<div class="social-share">
    <a href="https://www.facebook.com/sharer/sharer.php?u=<%= url %>" target="_blank" title="Share on Facebook">
        <img src="/images/facebook_icon.png" alt="Facebook" class="social-icon">
    </a>
    <a href="https://twitter.com/intent/tweet?url=<%= url %>&text=<%= title %>" target="_blank" title="Tweet">
        <img src="/images/X_icon.png" alt="Twitter" class="social-icon">
    </a>
    <a href="https://www.linkedin.com/shareArticle?mini=true&url=<%= url %>&title=<%= title %>" target="_blank" title="Share on LinkedIn">
        <img src="/images/linkedin_icon.png" alt="LinkedIn" class="social-icon">
    </a>
</div>
</body>
</html>

